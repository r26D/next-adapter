{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "composite": true,
    "inlineSources": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "build",
    "rootDir": "src",
    "typeRoots": ["./ts-declarations", "./node_modules/@types"],
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/__mocks__/*", "**/__tests__/*"]
}
